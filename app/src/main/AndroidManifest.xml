<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.verbosetech.cabberdrive">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.HelpActivity" />
        <activity android:name=".activities.DocumentsActivity" />
        <activity android:name=".helpers.SplashScreen" />
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.Fare_and_RateActivity" />
        <activity android:name=".activities.ShowLocationsActivity" />
        <activity android:name=".activities.EarningsActivity" />
        <activity android:name=".activities.SettingsActivity"></activity>
        <activity android:name=".activities.MyTripsActivity">

        </activity>
        <activity android:name=".activities.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>